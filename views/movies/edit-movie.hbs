<h2>Edit {{movie.title}}</h2>

<form action="/movies/{{movie._id}}" method="POST">
  <label>Title:</label>
  <input type="text" name="title" value="{{movie.title}}" required><br>

  <label>Genre:</label>
  <input type="text" name="genre" value="{{movie.genre}}" required><br>

  <label>Plot:</label>
  <textarea name="plot" required>{{movie.plot}}</textarea><br>

  <label>Cast:</label>
  <select name="cast" multiple>

    {{#each celebrities}}

      <option value="{{_id}}" {{#if ../movie.cast.includes _id}}selected{{/if}}>{{name}}</option>

    {{/each}}

  </select><br>

  <button type="submit">Update Movie</button>
  
</form>
